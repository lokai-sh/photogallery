<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="359dp"
        android:layout_height="196dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Current Displayed Image" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="" />

    <TextView
        android:id="@+id/captionLabel"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="Caption:" />

    <EditText
        android:id="@+id/etCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Caption"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="match_parent"
        android:layout_height="33dp" />

    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="match_parent"
        android:layout_height="33dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollPhotos"
            android:text="prev"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="622dp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollPhotos"
            android:text="next"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/snap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="takePhoto"
            android:text="snap"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sharingToSocialMedia"
            android:text="Share"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="searchPhoto"
            android:text="search"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="635dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>


</LinearLayout>
